@model IEnumerable<Artist>
@{ 
    ViewData["Title"] = "List of Artists";
}

<div class="row">
    <div class="col-md-10 offset-md-1">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td class="align-middle">
                        <img class="img-rounded" src="@item.ProfilePictureURL" alt="@item.FullName" style="max-width:150px" />
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Bio)

                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-warning"  asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Промени</a> |
                        <a  class="btn btn-outline-info"  asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Повеќе детали</a> |
                        <a  class="btn btn-outline-danger"  asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Избриши</a> 

                    </td>


                </tr>
                }
            </tbody>
        </table>


    </div>
</div>

<div style="position:fixed; right:25px;bottom:25px;" class="text-white">
    <a asp-controller="Artists" asp-action="Create" class="btn btn-warning"> <i class="bi bi-plus-circle"></i>Додади</a>
</div>