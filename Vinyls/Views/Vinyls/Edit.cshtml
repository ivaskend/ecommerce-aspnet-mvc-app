@model NewVinylVM
@using Vinyls.Data;
@{ 
    ViewData["Title"] = "Edit a new vinyl";
} 

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Промени нова плоча</h4>
        </p>
        <div class="row">
            <div  class="col-md-8 offset-2">
                <form asp-action="Edit">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"> </label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price" class="control-label"> </label>
                                <input asp-for="Price" type ="number" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Details" class="control-label"> </label>
                                <input asp-for="Details" class="form-control" />
                                <span asp-validation-for="Details" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ImageURL" class="control-label"> </label>
                                <input asp-for="ImageURL" class="form-control" />
                                <span asp-validation-for="ImageURL" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="AlbumGenreId" class="control-label"> </label>
                                <select asp-for="AlbumGenreId" class="form-control" asp-items="ViewBag.AlbumGenres"></select>
                                <span asp-validation-for="AlbumGenreId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="AlbumFormat" class="control-label"> </label>
                                <select asp-for="AlbumFormat" class="form-control" asp-items="Html.GetEnumSelectList<AlbumFormat>()"></select>
                                <span asp-validation-for="AlbumFormat" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="RecordLabelId" class="control-label"> </label>
                                <select asp-for="RecordLabelId" class="form-control" asp-items="ViewBag.RecordLabels"></select>
                                <span asp-validation-for="RecordLabelId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ArtistIds" class="control-label"> </label>
                                <select asp-for="ArtistIds" class="form-control" multiple asp-items="ViewBag.Artists"></select>
                                <span asp-validation-for="ArtistIds" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"> </label>
                                <textarea asp-for="Description" class="form-control" multiple></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                        </div>
                    </div>

                    <div class="col-md-4 offset-4 text-center">
                        <img width="100%" id="ImageURLPreview" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Промени" class="btn btn-outline-warning float-right"/>
                        <a class="btn btn-outline-secondary" asp-action="Index">Назад</a>
                    </div>

                </form>

            </div>
        </div>
    </div>

</div>

@section Scripts{ 
    <script>
        $(document).ready(function () {
            var output = document.getElementById("ImageURLPreview");
            output.src = $("#ImageURL").val();
        })
        $("#ImageURL").on("change", function () {
            var output = document.getElementById("ImageURLPreview");
            output.src = $(this).val();
        })
    </script>
}